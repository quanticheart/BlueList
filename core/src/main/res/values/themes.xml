<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_secondary</item>
<!--        <item name="colorOnPrimary">@color/background</item>-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_details_primary</item>
        <item name="colorSecondaryVariant">@color/app_details_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="default_toolbar">
        <item name="android:layout_height">@dimen/toolbar_default_height</item>
        <item name="android:background">@color/app_primary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="default_card_style" parent="CardView">
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="cardElevation">@dimen/default_elevation</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="default_list_style">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="default_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">250</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="default_edittext_text_field" parent="default_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:gravity">top</item>
        <item name="android:maxLength">500</item>
        <item name="android:maxLines">10</item>
    </style>

</resources>