<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="default_toolbar">
        <item name="android:layout_height">@dimen/toolbar_default_height</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:orientation">vertical</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="default_card_style" parent="CardView">
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="cardElevation">@dimen/default_elevation</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="default_list_style">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fadingEdge">none</item>
    </style>
</resources>